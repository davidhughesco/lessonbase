<%= form_for(@response) do |f| %>

<div id="responseForm">
  <div class="row">
    <div class="col-lg-12">
      <div class="form-group">
        <%= f.text_field :test_id, placeholder: "Test Number", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.text_field :name, placeholder: "Name", class: "form-control" %>
      </div>
      <%= f.hidden_field :answer %>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-3 col-md-6 col-6">
      <a class="btn btn-lg btn-answer" id="answerA">A</a>
    </div>
    <div class="col-lg-3 col-md-6 col-6">
      <a class="btn btn-lg btn-answer" id="answerB">B</a>
    </div>
    <div class="col-lg-3 col-md-6 col-6">
      <a class="btn btn-lg btn-answer" id="answerC">C</a>
    </div>
    <div class="col-lg-3 col-md-6 col-6">
      <a class="btn btn-lg btn-answer" id="answerD">D</a>
    </div>
  </div>
</div>

<% end %>

<script type="text/javascript">
  $('#answerA').click(function() {
    $('#response_answer').val('A');
    $('form').submit();
  });
  $('#answerB').click(function() {
    $('#response_answer').val('B');
    $('form').submit();
  });
  $('#answerC').click(function() {
    $('#response_answer').val('C');
    $('form').submit();
  });
  $('#answerD').click(function() {
    $('#response_answer').val('D');
    $('form').submit();
  });
</script>
